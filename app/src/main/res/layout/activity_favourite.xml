<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/width_height_match_parent"
    tools:context=".movie.favourite.FavouriteActivity">

    <ListView
        android:id="@+id/lv_favourite_movie_id"
        style="@style/width_match_parent_height_wrap_content" />

    <TextView
        android:id="@+id/tv_empty_view_favourite_activity_id"
        style="@style/width_height_wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/default_margin"
        android:layout_marginStart="@dimen/default_margin"
        android:text="@string/you_don_t_have_favourite_movies"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/text_size_18sp"
        android:textStyle="bold"
        android:visibility="gone" />

</FrameLayout>