<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardMaxElevation="1dp"
    card_view:cardElevation="1dp"
    card_view:cardCornerRadius="5dp"
    android:padding="1dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardPreventCornerOverlap="false"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <FrameLayout
            android:layout_width="80dp"
            android:layout_height="80dp">
            <ImageView
                android:id="@+id/iv_trailer_image_view_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/no_image"/>
            <ImageView
                android:id="@+id/iv_start_button_trailer_image_view_id"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_play_arrow_white_36px"/>
        </FrameLayout>

        <TextView
            android:id="@+id/tv_trailer_title_text_view_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Trailer Name"
            android:layout_gravity="start|center"
            android:layout_marginStart="16dp"/>
    </LinearLayout>



</android.support.v7.widget.CardView>